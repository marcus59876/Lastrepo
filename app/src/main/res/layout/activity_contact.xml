<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/emergency" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="36dp"
        android:text="In Emergency: Dial 9-1-1"
        android:textSize="16dp"
        android:textStyle="bold"
        app:fontFamily="sans-serif"
        android:layout_below="@id/imageView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="36dp"
        android:text="Ohio State University Police"
        android:textSize="16dp"
        android:textStyle="bold"
        app:fontFamily="sans-serif"
        android:layout_below="@id/textView3"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="36dp"
        android:text="Medical Center Security"
        android:textSize="16dp"
        android:textStyle="bold"
        app:fontFamily="sans-serif"
        android:layout_below="@id/textView4" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="36dp"
        android:text="Student Safety Service"
        android:textSize="16dp"
        android:textStyle="bold"
        app:fontFamily="sans-serif"
        android:layout_below="@id/textView6" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:text="614-292-2121"
        android:textSize="16dp"
        app:fontFamily="sans-serif"
        android:layout_below="@id/textView4" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:text="614-293-8500"
        android:textSize="16dp"
        app:fontFamily="sans-serif"
        android:layout_below="@id/textView6" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:text="614-292-3322"
        android:textSize="16dp"
        app:fontFamily="sans-serif"
        android:layout_below="@id/textView8" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="32dp"
        android:text="Contact"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="32dp"
        android:text="Make Call"
        android:layout_alignParentRight="true"
        android:layout_below="@id/imageView" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginRight="32dp"
        android:text="Make Call"
        android:layout_alignParentRight="true"
        android:layout_below="@id/button0" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginRight="32dp"
        android:text="Make Call"
        android:layout_alignParentRight="true"
        android:layout_below="@id/button1" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginRight="32dp"
        android:text="Make Call"
        android:layout_alignParentRight="true"
        android:layout_below="@id/button2" />

</RelativeLayout>